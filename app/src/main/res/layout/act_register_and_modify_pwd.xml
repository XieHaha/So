<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_login_bg"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="54dp"
    android:paddingEnd="15dp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/ic_back" />

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/txt_find_pwd"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_20" />

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/txt_register_please"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_20"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_call" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/iv_lock"
            android:text="@string/txt_phone"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_lock"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/txt_input_phone_hint"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_ffffff"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_lock"
            android:layout_marginTop="12dp"
            android:background="@color/color_ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_verify" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/image1"
            android:text="@string/txt_verify_code"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />

        <EditText
            android:id="@+id/et_verify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/text3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/image1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/txt_input_verify_code"
            android:inputType="number"
            android:maxLength="8"
            android:minWidth="200dp"
            android:singleLine="true"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_ffffff"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/image1"
            android:layout_marginTop="12dp"
            android:background="@color/color_ffffff" />

        <TextView
            android:id="@+id/tv_get_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/corner8_stroke1_ffffff"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="@string/txt_get_verify_code"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_lock" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/iv_call"
            android:text="@string/txt_input_pwd"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_call"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/txt_input_pwd_hint"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_ffffff"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_call"
            android:layout_marginTop="12dp"
            android:background="@color/color_ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_lock_comfirm" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/image"
            android:text="@string/txt_verify_pwd"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />

        <EditText
            android:id="@+id/et_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/image"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/txt_input_pwd_hint_again"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_ffffff"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/image"
            android:layout_marginTop="12dp"
            android:background="@color/color_ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_register_hint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="55dp"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/txt_register_hint"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_next"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginBottom="76dp"
        android:background="@mipmap/ic_red_rect"
        android:gravity="end"
        android:paddingStart="0dp"
        android:paddingEnd="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:drawableEnd="@mipmap/ic_right"
            android:drawablePadding="5dp"
            android:text="@string/txt_sure"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

</LinearLayout>