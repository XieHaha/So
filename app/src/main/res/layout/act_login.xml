<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_login_bg"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="97dp"
    android:paddingEnd="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_hello"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/txt_welcome"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_call" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/iv_lock"
            android:text="@string/txt_phone"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_lock"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/txt_input_phone_hint"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_ffffff"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_lock"
            android:layout_marginTop="12dp"
            android:background="@color/color_ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_lock" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/iv_call"
            android:text="@string/txt_input_pwd"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_call"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/txt_input_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_ffffff"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_call"
            android:layout_marginTop="12dp"
            android:background="@color/color_ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forgot_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/txt_forgot_pwd"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="0dp"
            android:paddingBottom="10dp"
            android:text="@string/txt_sign_up_now"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_login_next"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginBottom="76dp"
        android:background="@mipmap/ic_red_rect"
        android:gravity="end"
        android:paddingStart="0dp"
        android:paddingEnd="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:drawableEnd="@mipmap/ic_right"
            android:drawablePadding="5dp"
            android:text="@string/txt_login"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

</LinearLayout>