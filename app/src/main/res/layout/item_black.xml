<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:minHeight="126dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/iv_header"
        android:background="@drawable/corner5_211d1d_bg"
        android:minHeight="20dp">

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:src="@mipmap/ic_vip" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/iv_vip"
            android:textColor="@color/txt_vip_color_selector"
            android:textSize="@dimen/text_14"
            tools:text="名字" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/layout"
        android:layout_toEndOf="@id/layout"
        android:src="@mipmap/ic_verify_green" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textColor="@color/color_211d1d"
            android:textSize="@dimen/text_10"
            tools:text="2020年1月9日 17:29:43" />

        <ImageView
            android:id="@+id/iv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_attention"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_alignStart="@id/layout"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="45dp"
        android:textColor="#918F9B"
        android:textSize="@dimen/text_12"
        tools:text="签名" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sign"
        android:layout_alignStart="@id/layout"
        android:layout_alignBottom="@id/iv_header"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="@drawable/corner10_fafafa_bg"
            android:drawableStart="@drawable/selector_sex"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/txt_male"
            android:textColor="#241533"
            android:textSize="@dimen/text_10" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/corner10_fafafa_bg"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#241533"
            android:textSize="@dimen/text_10"
            tools:text="111" />

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/corner10_fafafa_bg"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#241533"
            android:textSize="@dimen/text_10"
            tools:text="工作" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/corner10_fafafa_bg"
            android:drawableStart="@mipmap/ic_location_black"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#241533"
            android:textSize="@dimen/text_10"
            tools:text="中国" />

    </LinearLayout>

</RelativeLayout>