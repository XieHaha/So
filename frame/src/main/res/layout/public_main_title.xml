<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f8f9fa"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_f8f9fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/public_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingEnd="60dp"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_20"
            android:textStyle="bold"
            tools:text="标题" />

        <TextView
            android:id="@+id/public_main_title_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="bottom"
            android:paddingTop="26dp"
            android:paddingEnd="16dp"
            android:textColor="@color/txt_main_color_selector"
            android:textSize="@dimen/text_16"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/public_main_title_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="10dp"
            android:paddingTop="23dp"
            android:paddingEnd="16dp"
            android:src="@mipmap/ic_more_black"
            android:visibility="visible" />
    </RelativeLayout>


</LinearLayout>