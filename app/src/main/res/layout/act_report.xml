<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/public_title" />

    <TextView
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableEnd="@mipmap/ic_arrow"
        android:gravity="center_vertical"
        android:hint="请选择理由"
        android:textColor="@color/color_211d1d"
        android:textColorHint="#918F9B"
        android:textSize="@dimen/text_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/rc_divider_line" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="请描述您的问题"
        android:textColor="@color/color_211d1d"
        android:textColorHint="#918F9B"
        android:textSize="@dimen/text_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/iv_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/corner5_b12c2c_bg"
        android:gravity="center"
        android:text="举报TA"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_15" />

</LinearLayout>