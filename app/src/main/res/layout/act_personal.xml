                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_job"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="职业"
                    android:textColor="@color/color_1e1c35"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_body_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="体型"
                    android:textColor="@color/color_1e1c35"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_body_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_race"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="种族"
                    android:textColor="@color/color_1e1c35"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_education"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="教育"
                    android:textColor="@color/color_1e1c35"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_marriage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="婚姻"
                    android:textColor="@color/color_1e1c35"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_marriage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_child"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="子女"
                    android:textColor="@color/color_1e1c35"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_smoke"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="吸烟"
                    android:textColor="@color/color_1e1c35"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_smoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_drink"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="喝酒"
                    android:textColor="@color/color_1e1c35"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_drink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#918F9B"
                    android:textSize="@dimen/text_12"
                    tools:text="20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_hei_line"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:src="@mipmap/ic_auth1" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>