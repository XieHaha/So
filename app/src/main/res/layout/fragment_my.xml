<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@mipmap/ic_verify_green"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@color/color_1e1c35"
                android:textSize="@dimen/text_24"
                tools:text="名字" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:autoLink="all"
                android:drawableEnd="@mipmap/ic_edit"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/txt_edit"
                android:textColor="@color/color_211d1d"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="80dp"
                android:gravity="center"
                android:textColor="#918F9B"
                android:textSize="@dimen/text_12"
                tools:text="名字" />

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/tv_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:src="@mipmap/ic_default_header_r" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sign"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="@drawable/corner10_ffffff_bg"
                    android:drawableStart="@drawable/selector_sex"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/txt_male"
                    android:textColor="#241533"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/corner10_ffffff_bg"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#241533"
                    android:textSize="@dimen/text_10"
                    tools:text="111" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/corner10_ffffff_bg"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#241533"
                    android:textSize="@dimen/text_10"
                    tools:text="工作" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/corner10_ffffff_bg"
                    android:drawableStart="@mipmap/ic_location_black"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#241533"
                    android:textSize="@dimen/text_10"
                    tools:text="中国" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_header"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_followed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_followed_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_min_num"
                        android:textColor="@color/color_373d4d"
                        android:textSize="@dimen/text_20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="@string/txt_followed"
                        android:textColor="@color/color_a1a8b3"
                        android:textSize="@dimen/text_10" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#918F9B" />

                <LinearLayout
                    android:id="@+id/layout_follow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_follow_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_min_num"
                        android:textColor="@color/color_373d4d"
                        android:textSize="@dimen/text_20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/txt_follow"
                        android:textColor="@color/color_a1a8b3"
                        android:textSize="@dimen/text_10" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#918F9B" />

                <LinearLayout
                    android:id="@+id/layout_browse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_browse_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_min_num"
                        android:textColor="@color/color_373d4d"
                        android:textSize="@dimen/text_20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/txt_browse"
                        android:textColor="@color/color_a1a8b3"
                        android:textSize="@dimen/text_10" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pic_my_bg" />

        <RelativeLayout
            android:id="@+id/layout_set"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/txt_setting"
                android:textColor="@color/color_1e1c35"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_setting" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_hei_line"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/text"
                android:background="#f0f0f0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_help"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/txt_help"
                android:textColor="@color/color_1e1c35"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_help" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_hei_line"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/text1"
                android:background="#f0f0f0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/txt_about"
                android:textColor="@color/color_1e1c35"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_about" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_hei_line"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/text2"
                android:background="#f0f0f0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_black"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/txt_blacklist"
                android:textColor="@color/color_1e1c35"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_blacklist" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_hei_line"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/text3"
                android:background="#f0f0f0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_exit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/txt_exit"
                android:textColor="@color/color_1e1c35"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_exit" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_hei_line"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/text4"
                android:background="#f0f0f0" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>