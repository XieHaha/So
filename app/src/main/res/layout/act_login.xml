<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/public_title" />

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="34dp"
        android:textColor="@color/color_373d4d"
        android:textSize="@dimen/text_24" />

    <TextView
        android:id="@+id/tv_login_title_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/color_a1a8b3"
        android:textSize="@dimen/text_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_hei_line"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/color_ebedf0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp">

        <TextView
            android:id="@+id/tv_login_obtain_code"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minWidth="78dp"
            android:textColor="@color/txt_main_color_selector"
            android:textSize="@dimen/text_16" />

        <View
            android:layout_width="@dimen/app_hei_line"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/tv_login_obtain_code"
            android:background="@color/color_d8d8d8" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_hei_line"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/color_ebedf0" />

    <TextView
        android:id="@+id/tv_login_next"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_16" />

</LinearLayout>